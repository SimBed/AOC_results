<%#= link_to 'New Player', new_player_path %>
<br><br>

<h5>Players (<%= @player_hashes.size %>)</h5>
<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th><%= sortable(column: "first_name",coltitle: "First Name", view: "index") %></th>
      <th><%= sortable(column: "last_name",coltitle: "Last Name", view: "index") %></th>
      <th><%= sortable(column: "AvScore", view: "index") %></th>
      <!--th><%#= sortable(column: "AvPos", view: "index") %><small> (of 20)</small></th-->
      <th><%= sortable(column: "Played", view: "index") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_hashes.each do |player_hash| %>
      <tr>
        <td><%= player_hash["rank"] %></td>
        <td><%= player_hash["firstname"] %></td>
        <td><%= player_hash["lastname"] %></td>
        <td><%= player_hash["avgscore"].round(2) %></td>
        <td><%= player_hash["played"]  %></td>
        <td><%= link_to 'Show', Player.find(player_hash["pid"]) %></td>
        <!--td><%#= link_to 'Edit', edit_player_path(player) %></td>
        <td><%#= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
      </tr>
    <% end %>
  </tbody>
</table>
